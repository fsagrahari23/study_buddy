    "/ai/generate-notes": {
      "post": {
        "summary": "Generate Concise Notes",
        "description": "Generate AI-powered concise notes from selected chapters",
        "tags": ["AI Features"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "fileId": {
                    "type": "string"
                  },
                  "chapters": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "example": ["Chapter 1", "Chapter 2"]
                  },
                  "style": {
                    "type": "string",
                    "enum": ["concise", "detailed", "bullet-points"],
                    "default": "concise"
                  }
                },
                "required": ["fileId", "chapters"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Generated notes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "notes": {
                      "type": "string"
                    },
